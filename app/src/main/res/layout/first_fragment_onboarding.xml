<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstOnboardingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="506dp"
                android:scaleType="fitXY"
                android:src="@drawable/equipment" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Create a workout plan to stay fit"
                android:textSize="33sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="120dp"
                android:gravity="center"
                android:text="Kick start your journey by crafting a tailored workout plan that suits your needs and goals"
                android:textSize="22sp" />

 <!--           <Button
                android:id="@+id/nextButton"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/primaryColor"
                android:gravity="center"
                android:text="Next"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />-->
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>